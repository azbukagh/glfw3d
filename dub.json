{
	"name": "glfw3d",
	"authors": [
		"Azbuka"
	],
	"description": "GLFW3 wrapper for D programming language",
	"copyright": "Copyright Â© 2016 Azbuka",
	"license": "MIT",
	"libs-posix": [
		"glfw3"
	],
	"libs-windows": [
		"glfw3dll"
	],
	"dependencies": {
		"derelict-glfw3" : {
			"version": "~>4.0.0-alpha.3",
			"optional": true
		},
		"erupted" : {
			"version": "*",
			"optional": true
		},
		"derelict-vulkan" : {
			"version": "*",
			"optional": true
		},
		"d-vulkan" : {
			"version": "*",
			"optional": true
		}
	},
	"buildTypes": {
		"doc": {
			"buildOptions": ["syntaxOnly"],
			"dflags": ["-c", "-Xfdocs.json"],
			"postBuildCommands": [
				"dub run whammydoc -- generate-html docs.json ../azbukagh.github.io/glfw3d",
				"rm docs.json __dummy.html"
			]
		}
	}
}
